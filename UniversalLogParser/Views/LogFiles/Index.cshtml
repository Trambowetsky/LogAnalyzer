@model IEnumerable<LogFileListViewModel>


<form asp-action="Upload" asp-controller="LogFiles" method="post" enctype="multipart/form-data">
    <input type="file" name="file" />
    <button type="submit">Upload</button>
</form>

<h2>Uploaded log files</h2>

<table class="table">
    <thead>
    <tr>
        <th>File name</th>
        <th>Uploaded on</th>
        <th>Rows</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var file in Model)
    {
        <tr>
            <td><a asp-controller="Log"
                   asp-action="Index"
                   asp-route-id="@file.Id"
                   class="text-decoration-none">
                @file.FileName
            </a></td>
            <td>@file.UploadedOn</td>
            <td>@file.Count</td>
            <td>
                <a asp-controller="LogFiles" asp-action="Delete" asp-route-id="@file.Id" class="btn btn-sm btn-danger">
                    Remove
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
